{
    "luci-app-singb": {
        "description": "Sing-box management access",
        "read": {
            "ubus": {
                "service": ["list", "get", "status"]
            },
            "file": {
                "/etc/sing-box/*": ["read"],
                "/usr/bin/singb-updater*": ["exec"],
                "/tmp/*": ["read"]
            },
            "uci": ["singb"]
        },
        "write": {
            "ubus": {
                "service": ["start", "stop", "restart"]
            },
            "file": {
                "/etc/sing-box/*": ["write"],
                "/tmp/*": ["write"]
            },
            "uci": ["singb"]
        }
    }
}
