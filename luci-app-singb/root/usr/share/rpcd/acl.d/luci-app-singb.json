{
    "luci-app-singb": {
        "description": "Sing-box management access",
        "read": {
            "file": {
                "/etc/init.d/sing-box": [ "exec" ],
                "/etc/sing-box/*": ["read"],
                "/usr/bin/singb/singb-updater*": ["exec"],
                "/tmp/*": ["read"]
            },
            
            "uci": ["singb"]
        },
        "write": {
            "file": {
                "/etc/sing-box/*": ["write"],
                "/tmp/*": ["write"]
            },
            "uci": ["singb"]
        }
    }
}
